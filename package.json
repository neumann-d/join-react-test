{
    "name": "join-react-test",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.9.11",
        "@material-ui/icons": "^4.9.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.1.2"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/jest": "^24.0.0",
        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-router-dom": "^5.1.4",
        "eslint": "^6.8.0",
        "eslint-config-typescript-react": "^0.1.1",
        "eslint-plugin-prettier": "^3.1.3",
        "prettier": "^1.19.1",
        "react-scripts": "3.4.1",
        "typescript": "~3.7.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "test": "react-scripts test",
        "lint": "eslint ./src/**/*.{ts,tsx}",
        "build": "npm run lint && react-scripts test --watchAll=false && react-scripts build",
        "deploy": "npm run build && npm pack && firebase deploy"
    },
    "eslintConfig": {
        "extends": "react-app",
        "rules": {
            "no-console": "error"
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
